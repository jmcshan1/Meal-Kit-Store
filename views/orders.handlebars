{{!-- order form  --}}
{{#if logged_in}}
<div>
  <div>
    <img src='{{product.picture}}' alt='Picture of Meal Kit' />
  </div>
  <div>
    <h3>{{product.product_name}}</h3>
    <p>{{product.product_description}}</p>
  </div>
</div>

{{> order-details}}
{{else}}
<div class="alert alert-warning" role="alert">
    <p>You need to log in to view the product details.</p>
</div>
{{/if}}
