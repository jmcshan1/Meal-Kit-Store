<div class="login-container bg-gray-100 p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-4">Login</h2>
    {{!-- created login-form section for username; login; and password --}}
    <form class="login-form">
        <div class="form-group mb-4">
            <label for="username-login" class="block text-sm font-medium text-gray-600">Username</label>
            <input class="form-input mt-1 p-2 w-full border rounded-md" type="text" id="username-login" required>
        </div>
        <div class="form-group">
            <label for="password-login" class="block text-sm font-medium text-gray-600">Password</label>
            <input class="form-input mt-1 p-2 w-full border rounded-md" type="password" id="password-login" required>
        </div>
        <div class="form-group">
            <button class="btn btn-primary bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md" type="submit">Login</button>
        </div>
    </form>
</div>

{{!-- created sign-up form section for username; password; and submit button --}}
<div class="signup-container bg-gray-100 p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-4">Sign Up</h2>
    <form class="signup-form">
        <div class="form-group">
            <label for="username" class="block text-sm font-medium text-gray-600">Username:</label>
            <input type="text" name="username" id="username-signup" class="form-input mt-1 p-2 w-full border rounded-md">
        </div>
        {{!-- created a form-group section for Password and submit --}}
        <div class="form-group">
            <label for="password" class="block text-sm font-medium text-gray-600">Password:</label>
            <input type="password" name="password" id="password-signup" class="form-input mt-1 p-2 w-full border rounded-md">
        </div>
        <button class="btn btn-primary bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md" type="submit">Submit</button>
    </form>
</div>

<script src="./js/login.js"></script>